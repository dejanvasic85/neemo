@model LoginViewModel

@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_Magento.cshtml";
}
<div class="ma-main-container col1-layout">
    <div class="main">
        <div class="col-main">
            <div class="account-login">
                <div class="page-title">
                    <h1>Login or Create an Account</h1>
                </div>
                <form action="@Url.Login()" method="post" id="login-form">
                    @Html.AntiForgeryToken()
                    <div class="col2-set">
                        <div class="col-1 new-users">
                            <div class="content">
                                <h2>New Customers</h2>
                                <p>By creating an account with our store, you will be able to move through the checkout process faster, store multiple shipping addresses, view and track your orders in your account and more.</p>
                            </div>
                        </div>
                        <div class="col-2 registered-users">
                            <div class="content">
                                <h2>Registered Customers</h2>
                                <p>If you have an account with us, please log in.</p>

                                @if (Model.WrongUsernameOrPassword)
                                {
                                    <div class="alert alert-danger">The username or password is not valid.</div>
                                }

                                <ul class="form-list">
                                    <li>
                                        @Html.BootstrapLabelFor(m => m.Email)
                                        <div class="input-box controls">
                                            @Html.TextBoxFor(m => m.Email, new { @class = "input-text", tabindex = "1" })
                                        </div>
                                        @Html.ValidationMessageFor(m => m.Email)
                                    </li>
                                    <li>
                                        @Html.BootstrapLabelFor(m => m.Password)
                                        <div class="input-box controls">
                                            @Html.PasswordFor(m => m.Password, new { @class = "input-text", tabindex = "2" })
                                        </div>
                                        @Html.ValidationMessageFor(m => m.Password)
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col2-set">

                        <div class="col-1 new-users">
                            <div class="buttons-set">
                                <a class="btn" href="@Url.Register()" title="Create an Account">Create an Account</a>
                            </div>
                        </div>
                        <div class="col-2 registered-users">
                            <div class="buttons-set">
                                <a href="" class="f-left">Forgot Your Password?</a>
                                <button class="btn" title="Login" tabindex="3">Login</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>