@model ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
    Layout = "~/Views/Shared/_Magento.cshtml";
}

<div class="ma-main-container col1-layout">
    <div class="main">
        <div class="row-fluid">
            <div class="col-main span12">
                <div class="page-title">
                    <h1>@ViewBag.Title</h1>
                </div>

                <div style="padding:15px;">
                    <div class="row-fluid">

                        @*first col*@
                        <div class="span6">
                            <form action="@Url.ResetPassword()" method="post">
                                @Html.HiddenFor(model => model.Code)
                                <div class="bordered-form">
                                    <h3><i class="fa fa-lock"></i>&nbsp; Setup your new password</h3>
                                    
                                    @Html.AntiForgeryToken()

                                   <ul class="form-list">
                                        <li>
                                            @Html.BootstrapLabelFor(m => m.Email)
                                            <div class="input-box controls">
                                                @Html.TextBoxFor(m => m.Email, new { @class = "input-text", tabindex = "1" })
                                            </div>
                                            @Html.ValidationMessageFor(m => m.Email)
                                        </li>
                                        
                                        <li>
                                            @Html.BootstrapLabelFor(m => m.Password)
                                            <div class="input-box controls">
                                                @Html.PasswordFor(m => m.Password, new { @class = "input-text", tabindex = "1" })
                                            </div>
                                            @Html.ValidationMessageFor(m => m.Password)
                                        </li>
                                        
                                        <li>
                                            @Html.BootstrapLabelFor(m => m.ConfirmPassword)
                                            <div class="input-box controls">
                                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input-text", tabindex = "1" })
                                            </div>
                                            @Html.ValidationMessageFor(m => m.ConfirmPassword)
                                        </li>
                                    </ul>
                                    
                                </div>
                                <div class="footer-submit">
                                    <button class="btn pull-right" title="Reset Passord" tabindex="3">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

