@model Neemo.Web.Models.HomeView


@{
    ViewBag.Title = "Home - Featured Products and New Products";
    Layout = "~/Views/Shared/_Magento.cshtml";
}

<div class="ma-main-container col3-layout">
    <div class="main">
        <div class="row-fluid">
            <div class="span3 bordered">
                <div class="ma-featured-product-title">
                    <h2>Latest Products</h2>
                    @foreach (var newProduct in Model.NewProducts)
                    {
                        @Html.DisplayFor(m => newProduct)
                    }
                </div>
                
            </div>
            <div class="span3 bordered">
                <div class="ma-featured-product-title">
                    <h2>Latest Wreckers</h2>
                </div>
            </div>
            <div class="span3 bordered">
                <div class="ma-featured-product-title">
                    <h2>Latest Repairers</h2>
                </div>
            </div>
            <div class="span3 bordered">
                <div class="ma-featured-product-title">
                    <h2>Latest Auxiliaries</h2>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts
{
    <script type="text/javascript">

        jQuery('#advancedSearchBtn').on('click', function () {
            jQuery('#advancedSearch').slideDown(2000);
            jQuery(this).hide();
        });
    </script>

}
