@model FindModelView


@{
    ViewBag.Title = "Search Results";
    Layout = "~/Views/Shared/_Magento.cshtml";
}

<div class="ma-main-container col3-layout">
    <div class="main">

        <div class="row-fluid">

            @*Product Filters*@
            <div class="col-left sidebar span3">
                <div class="block block-layered-nav">
                    <div class="block-title"><strong><span>Categories </span></strong></div>
                    <div class="block-content">
                        @Html.Partial("~/Views/Shared/Partial/_CategoriesSearchLinks.cshtml", (CategoryListView)@ViewBag.Categories)
                    </div>
                </div>


                <div class="block block-layered-nav">
                    <div class="block-title">
                        <strong><span>Product Filters</span></strong>
                    </div>
                    <div style="padding:10px">

                        <div class="control-group">
                            @Html.BootstrapLabelFor(m => m.Keyword)
                            <div class="controls">
                                @Html.TextBoxFor(m => m.Keyword)
                            </div>
                        </div>

                        <div class="control-group">
                            @Html.BootstrapLabelFor(m => m.SortBy)
                            <div class="controls">
                                @Html.DropDownListFor(m => m.SortBy, Model.SortByItems)
                            </div>
                        </div>

                        <div class="control-group">
                            @Html.BootstrapLabelFor(m => m.PriceMin)
                            <div class="controls">
                                @Html.TextBoxFor(m => m.PriceMin, new { data_numbers_only = "" })
                            </div>
                        </div>

                        <div class="control-group">
                            @Html.BootstrapLabelFor(m => m.PriceMax)
                            <div class="controls">
                                @Html.TextBoxFor(m => m.PriceMax, new { data_numbers_only = "" })
                            </div>
                        </div>
                        <div class="control-group">
                            <button class="btn" data-apply-filters data-loading-text="Please wait...">Apply</button>
                        </div>
                    </div>
                </div>
            </div>

            @*Search Results*@

            @if (Model.HasResults)
            {
                <div class="col-wrapper span9">
                    <div class="row-fluid">
                        <div class="col-main span12">
                            @Html.Partial("~/Views/Shared/Partial/_SearchPagingToolbar.cshtml")
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="col-main span12">
                            @Html.Partial("~/Views/Shared/Partial/_SearchResults.cshtml", Model.ProductResults)
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="col-main span12">
                            @Html.Partial("~/Views/Shared/Partial/_SearchPagingToolbar.cshtml")
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="col-wrapper span9">
                    <div class="alert">
                        Sorry. It looks like we don't have any products that match your search.
                    </div>
                </div>
            }
        </div>
    </div>
</div>
