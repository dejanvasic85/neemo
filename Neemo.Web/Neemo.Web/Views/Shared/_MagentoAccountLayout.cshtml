    <div class="main">
        <div class="row-fluid">
            <div class="col-left sidebar span3">
                <div class="block block-account">
                    <div class="block-title">
                        <strong><span>My Account</span></strong>
                    </div>
                    <div class="block-content">
                        <ul>
                            <li><a href="@Url.MyAccount()">Account Information</a></li>
                            <li><a href="@Url.MyOrders()">My Orders</a></li>
                            <li><a href="http://www.plazathemes.com/demo/ma_carstore_res/sales/billing_agreement/">Billing Agreements</a></li>
                            <li><a href="http://www.plazathemes.com/demo/ma_carstore_res/sales/recurring_profile/">Recurring Profiles</a></li>
                            <li><a href="http://www.plazathemes.com/demo/ma_carstore_res/review/customer/">My Product Reviews</a></li>
                            <li><a href="http://www.plazathemes.com/demo/ma_carstore_res/tag/customer/">My Tags</a></li>
                            <li><a href="http://www.plazathemes.com/demo/ma_carstore_res/wishlist/">My Wishlist</a></li>
                            <li><a href="http://www.plazathemes.com/demo/ma_carstore_res/oauth/customer_token/">My Applications</a></li>
                            <li><a href="http://www.plazathemes.com/demo/ma_carstore_res/newsletter/manage/">Newsletter Subscriptions</a></li>
                            <li class="last"><a href="http://www.plazathemes.com/demo/ma_carstore_res/downloadable/customer/products/">My Downloadable Products</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            @RenderBody()
        </div>
    </div>
</div>


