@{
    ViewBag.Title = "_MagentoAccountLayout";
    Layout = "~/Views/Shared/_Magento.cshtml";
}

<div class="ma-main-container col2-left-layout">
    <div class="main">
        <div class="row-fluid">
            <div class="col-left sidebar span3">
                <div class="block block-account">
                    <div class="block-title">
                        <strong><span>My Account</span></strong>
                    </div>
                    <div class="block-content">
                        <ul>
                            <li><a href="@Url.MyAccountDetails()">Personal Details</a></li>
                            <li><a href="@Url.MyShippingDetails()">Shipping Details</a></li>
                            <li class="last"><a href="@Url.MyOrders()">My Orders</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            @RenderBody()
        </div>
    </div>
</div>