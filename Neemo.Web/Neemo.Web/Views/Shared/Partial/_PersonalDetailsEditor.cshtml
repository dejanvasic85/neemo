@model PersonalDetailsView

<div class="control-group">
    @Html.LabelFor(m => m.Firstname)
    <div class="controls">
        @Html.TextBoxFor(m => m.Firstname)
    </div>
    @Html.ValidationMessageFor(m => m.Firstname)
</div>

<div class="control-group">
    @Html.LabelFor(m => m.Surname)
    <div class="controls">
        @Html.TextBoxFor(m => m.Surname)
    </div>
    @Html.ValidationMessageFor(m => m.Surname)
</div>

<div class="control-group">
    @Html.LabelFor(m => m.PhoneNumber)
    <div class="controls">
        @Html.TextBoxFor(m => m.PhoneNumber, new {data_numbers_only=true, maxlength=12})
    </div>
    @Html.ValidationMessageFor(m => m.PhoneNumber)
</div>

<div class="control-group">
    @Html.LabelFor(m => m.Company)
    <div class="controls">
        @Html.TextBoxFor(m => m.Company)
    </div>
    @Html.ValidationMessageFor(m => m.Company)
</div>

<div class="control-group">
    @Html.LabelFor(m => m.AddressLine1)
    <div class="controls">
        @Html.TextBoxFor(m => m.AddressLine1)
    </div>
    @Html.ValidationMessageFor(m => m.AddressLine1)
</div>

<div class="control-group">
    @Html.LabelFor(m => m.City)
    <div class="controls">
        @Html.TextBoxFor(m => m.City)
    </div>
    @Html.ValidationMessageFor(m => m.City)
</div>

