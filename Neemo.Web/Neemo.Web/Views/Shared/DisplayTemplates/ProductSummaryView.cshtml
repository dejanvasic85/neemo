@model ProductSummaryView

<li class="Modelslider-item" style="width: 187px; float: left; display: block;">
    <div class="feadture-inner">
        <a href="@Url.Product(Model.ProductId)"
           title="@Model.Title"
           class="product-image">
            <img src="@Url.Image(Model.ImageId)" alt="Lorem ipsum dolor">
        </a>

        <h2 class="product-name">
            <a href="@Url.Product(Model.ProductId)" title="Lorem ipsum dolor">
                @Model.Title
            </a>
        </h2>

        <div class="price-box">
            <span class="regular-price" id="product-price-2">
                <span class="price">@Model.Price.ToString("C")</span>
            </span>
        </div>

        <div class="actions">
            <button type="button" title="Add to Cart" class="button btn-cart">
                <span>
                    <span>
                        Add to Cart
                    </span>
                </span>
            </button>
        </div>
    </div>
</li>