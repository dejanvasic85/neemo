@using Neemo
@model ProductSummaryView


<div class="featured-tile">
    <div class="thumbnail text-center" style="min-height: 220px">

        <a href="@Url.Product(Model.ProductId, Model.TitleSlug)"
           title="@Model.Title"
           class="product-image">

            <img src="@Url.Image(Model.ImageId)" style="width: 129px; height: 97px;">
        </a>
        <div class="caption">
            <p>
                @if (Model.OutOfStock)
                {
                    <div style="padding: 5px; font-weight: bold">
                        <span class="label label-warning">Sold Out</span>
                    </div>
                }
                else
                {
                    <button type="button" title="Add to Cart" class="btn btn-cart" data-productid="@Model.ProductId">
                        <i class="icon-plus icon-white"></i> Add To Cart
                    </button>
                }
            </p>
            <h3 class="top-buffer-10">
                <a href="@Url.Product(Model.ProductId, Slug.Create(Model.Title))">
                    @Model.Title.TruncateOnWordBoundary(20)
                </a>
            </h3>
            <p>@Model.Description.TruncateOnWordBoundary(100)</p>
            
            <div class="bottom-separator">
                <span>@Model.Price.ToString("C")</span>
            </div>

        </div>
    </div>
</div>