@model InvoiceDetailView

@{
    ViewBag.Title = "Payment Successful";
    Layout = "~/Views/Shared/_Magento.cshtml";
}


<div class="ma-main-container col1-layout">
    <div class="main">
        <div class="col-main">
            <div class="page-title">
                <h2>Payment Completed Successfully</h2>
            </div>
            <div style="padding: 20px; margin: 15px;">
                <div class="row-fluid">
                    <div class="span12">
                        <div class="pull-right">
                            <a href="@Url.Invoice(Model.InvoiceNumber)" class="btn" target="_blank">Print Version</a>
                        </div>
                    </div>
                </div>
                @Html.Partial("~/Views/Account/_Invoice.cshtml", Model)
            </div>
        </div>
    </div>
</div>