@using Neemo.Web.Infrastructure
@model ProductDetailView

@{
    Layout = "~/Views/Shared/_Magento.cshtml";
    ViewBag.Title = Model.Title;
}

<div class="ma-main-container col2-right-layout">
    <div class="main">
        <div class="breadcrumbs">
            <ul>
                <li class="home">
                    @Html.ActionLink("Home", "Index", "Home")
                    <span>/ </span>
                </li>
                <li class="category3">
                    <a href="http://www.plazathemes.com/demo/ma_carstore_res/mercedes.html" title="">
                        @Model.Category
                    </a>
                    <span>/ </span>
                </li>
                <li class="product">
                    <strong>@Model.Title</strong>
                </li>
            </ul>
        </div>
        <div class="row-fluid">
            <div class="col-main span12">

                <div id="messages_product_view"></div>
                <div class="product-view">
                    <div class="product-name">
                        <h1>@Model.Title</h1>
                    </div>
                    <div class="product-essential">

                        <div class="no-display">
                            <input type="hidden" name="product" value="2">
                            <input type="hidden" name="related_product" id="related-products-field" value="">
                        </div>
                        <div class="row-fluid">

                            <div class="product-img-box span4">
                                <p class="product-image" style="padding:5px;">
                                    <!-- images for lightbox -->
                                    @*Todo - Implement lightbox*@
                                    @*<a href="@Url.Image(Model.Images.First())" class="ma-a-lighbox" rel="lightbox[rotation]"></a>*@
                                    <!--++++++++++++-->
                                    <a class="cloud-zoom" id="ma-zoom1" style="position: relative; display: block;" rel="adjustX:10, adjustY:-2, zoomWidth:300, zoomHeight:300">
                                        <img id="mainImage" src="@Url.Image(Model.Images.First())" alt="@Model.Title" title="@Model.Title" />
                                    </a>
                                </p>
                                <div class="more-views ma-more-img">
                                    <h2>More Views</h2>
                                    <ul>
                                        @foreach (var img in Model.Images)
                                        {
                                            @*<li>
                                                    <a href="http://www.plazathemes.com/demo/ma_carstore_res/media/catalog/product/cache/1/image/1200x1200/9df78eab33525d08d6e5fb8d27136e95/o/t/oto-1_1.png" class="cloud-zoom-gallery" title="http://www.plazathemes.com/demo/ma_carstore_res/media/catalog/product/cache/1/image/500x500/9df78eab33525d08d6e5fb8d27136e95/o/t/oto-1_1.png" rel="useZoom: 'ma-zoom1', smallImage: 'http://www.plazathemes.com/demo/ma_carstore_res/media/catalog/product/cache/1/image/265x/9df78eab33525d08d6e5fb8d27136e95/o/t/oto-1_1.png'">
                                                        <img src="http://www.plazathemes.com/demo/ma_carstore_res/media/catalog/product/cache/1/thumbnail/56x/9df78eab33525d08d6e5fb8d27136e95/o/t/oto-1_1.png" width="56" height="56" alt="">
                                                    </a>
                                                </li>*@
                                            <li>
                                                <a class="cloud-zoom-gallery">
                                                    <img src="@Url.Image(img)" width="56" height="56" alt="" title="" />
                                                </a>
                                            </li>
                                        }
                                    </ul>

                                </div>
                            </div>

                            <div class="product-shop span8">

                                <p class="email-friend"><a href="http://www.plazathemes.com/demo/ma_carstore_res/sendfriend/product/send/id/2/cat_id/3/">Email to a Friend</a></p>

                                <p class="availability in-stock">
                                    Availability:
                                    <span>
                                        @if (Model.AvailableQty == 0)
                                        {
                                            <text>Out of stock</text>
                                        }
                                        else
                                        {
                                            <text>In Stock</text>
                                        }
                                    </span>
                                </p>

                                <div class="short-description">
                                    <h2>Quick Overview</h2>
                                    <div class="std">
                                        @Model.QuickOverview
                                    </div>
                                </div>

                                <div class="product-options-bottom">

                                    <div class="price-box">
                                        <span class="regular-price" id="product-price-2_clone">
                                            <span class="price">@Model.Price.ToString("C")</span>
                                        </span>
                                    </div>

                                    <div class="add-to-cart">
                                        <label for="qty">Qty:</label>
                                        <input type="text" name="qty" id="qty" maxlength="12" value="1" title="Qty" class="input-text qty">
                                        <button type="button" title="Add to Cart" class="button btn-cart" onclick="productAddToCartForm.submit(this)"><span><span>Add to Cart</span></span></button>
                                    </div>

                                </div>

                            </div>

                        </div>

                        <div class="clearer"></div>
                    </div>

                    <div class="product-collateral">
                        <ul class="product-tabs">
                            <li id="product_tabs_description" class=" active first"><a href="javascript:void(0)">Product Description</a></li>
                        </ul>
                        @*Description*@
                        <div class="product-tabs-content" id="product_tabs_description_contents">
                            <h2>Details</h2>
                            <div class="std">
                                @Html.Raw(Model.Description)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{

    <script type="text/javascript">
        //<![CDATA[
        var DateOption = Class.create({

            getDaysInMonth: function (month, year) {
                var curDate = new Date();
                if (!month) {
                    month = curDate.getMonth();
                }
                if (2 == month && !year) { // leap year assumption for unknown year
                    return 29;
                }
                if (!year) {
                    year = curDate.getFullYear();
                }
                return 32 - new Date(year, month - 1, 32).getDate();
            },

            reloadMonth: function (event) {
                var selectEl = event.findElement();
                var idParts = selectEl.id.split("_");
                if (idParts.length != 3) {
                    return false;
                }
                var optionIdPrefix = idParts[0] + "_" + idParts[1];
                var month = parseInt($(optionIdPrefix + "_month").value);
                var year = parseInt($(optionIdPrefix + "_year").value);
                var dayEl = $(optionIdPrefix + "_day");

                var days = this.getDaysInMonth(month, year);

                //remove days
                for (var i = dayEl.options.length - 1; i >= 0; i--) {
                    if (dayEl.options[i].value > days) {
                        dayEl.remove(dayEl.options[i].index);
                    }
                }

                // add days
                var lastDay = parseInt(dayEl.options[dayEl.options.length - 1].value);
                for (i = lastDay + 1; i <= days; i++) {
                    this.addOption(dayEl, i, i);
                }
            },

            addOption: function (select, text, value) {
                var option = document.createElement('OPTION');
                option.value = value;
                option.text = text;

                if (select.options.add) {
                    select.options.add(option);
                } else {
                    select.appendChild(option);
                }
            }
        });
        dateOption = new DateOption();
        //]]>
    </script>

